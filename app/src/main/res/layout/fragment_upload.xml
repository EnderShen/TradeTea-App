<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Upload_image"
            android:layout_width="135dp"
            android:layout_height="107dp"
            android:adjustViewBounds="true"
            android:background="@color/cardview_dark_background"
            android:clickable="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WriteTitle"
            app:layout_constraintVertical_bias="0.096" />

        <EditText
            android:id="@+id/WriteTitle"
            android:layout_width="251dp"
            android:layout_height="42dp"
            android:hint="Enter Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/Edit_Describtion"
            android:layout_width="270dp"
            android:layout_height="97dp"
            android:hint="Write Describtion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Upload_image"
            app:layout_constraintVertical_bias="0.174" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Edit_Describtion"
            app:layout_constraintVertical_bias="0.761" />

        <Spinner
            android:id="@+id/UserSelectSpinner"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/Upload_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.904"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WriteTitle"
            app:layout_constraintVertical_bias="0.547" />

        <EditText
            android:id="@+id/Upload_phone"
            android:layout_width="139dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="Contact number"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/button_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.834"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Edit_Describtion"
            app:layout_constraintVertical_bias="0.508" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>